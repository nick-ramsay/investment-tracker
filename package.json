{
  "name": "investment-tracker",
  "version": "1.0.0",
  "description": "A template used as a starter application for create MERN applications",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-ramsay/investment-tracker.git"
  },
  "author": "Nick Ramsay",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nick-ramsay/investment-tracker/issues"
  },
  "homepage": "https://github.com/nick-ramsay/investment-tracker#readme",
  "dependencies": {
    "axios": "^0.20.0",
    "concurrently": "^5.3.0",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.6",
    "nodemon": "^2.0.4"
  }
}
